<?xml version="1.0" encoding="utf-8" ?>
<mdscript name="Tpwar_Loader" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="D:/x4_extract_2.5/libraries/md.xsd">
    <cues>
        <cue name="Init" instantiate="true">
            <conditions>
                <check_any>
                    <event_long_range_scan_sent object="player.entity" />
                    <event_cue_signalled cue="md.Setup.GameStart" />
                </check_any>
            </conditions>
            <actions>
                 <debug_to_file text="'Tpwar_Loader'" name="'Loadorder.log'" directory="'Debug'" chance="global.$TpwarDebugChance" append="false" />
                <set_value name="global.$TpwarDebugChance" exact="100" />
                <set_value name="global.$TpwarFuelCost" exact="100" />
                <set_value name="global.$TpwarGalaxyDebug" exact="100" />
                <set_value name="$LoadOrder" exact="[
                        md.Lists.Init,
                        md.Galaxy_Debug.Init,
                        md.Tpwar_Menus.Init,
                ]" />
                <do_all exact="$LoadOrder.count" counter="$i">
                    <signal_cue_instantly cue="$LoadOrder.{$i}" />
                </do_all>
               
            </actions>
          
        </cue>
    </cues>
</mdscript>