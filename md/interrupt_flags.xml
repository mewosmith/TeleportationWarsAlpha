<?xml version="1.0" encoding="utf-8" ?>
<mdscript name="Interrupt_Flags" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="D:/x4_extract_2.5/libraries/md.xsd">
    <cues>
        <cue name="Init" instantiate="true">
            <conditions>
                <event_cue_signalled cue="md.Setup.GameStart" />
                 <check_value value="false" />
            </conditions>
            <actions>
                <set_value name="global.$TpwarPlayerInCombat" exact="false" />
            </actions>
            <cues>
                <cue name="PlayerInCombat">
                    <conditions>
                        <event_player_attacked_object />
                    </conditions>
                    <actions>
                        <set_value name="global.$TpwarPlayerInCombat" exact="true" />
                    </actions>
                    <cues>
                        <cue name="ResetPlayerInCombat">
                            <delay exact="60s" />
                            <actions>
                                <set_value name="global.$TpwarPlayerInCombat" exact="false" />
                                <reset_cue cue="PlayerInCombat" />
                            </actions>
                        </cue>
                    </cues>
                </cue>
            </cues>
        </cue>
    </cues>
</mdscript>