<?xml version="1.0" encoding="utf-8" ?>
<mdscript name="Create_Ship" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="D:/x4_extract_2.5/libraries/md.xsd">
    <cues>
        <cue name="Init" instantiate="true">
            <conditions>
                <event_player_activated_weapongroup weapongroup="1" />
            </conditions>
            <actions>
                <create_ship sector="player.sector" macro="player.ship.macro">
                    <select faction="faction.argon" />
                    <owner exact="faction.player" overridenpc="true"></owner>
                    <safepos object="player.ship" exact="2km" />
                </create_ship>
            </actions>
        </cue>
    </cues>
</mdscript>