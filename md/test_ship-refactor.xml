<?xml version="1.0" encoding="utf-8" ?>
<mdscript name="Ship_Refactor" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="D:/x4_extract_2.5/libraries/md.xsd">
    <cues>
        <cue name="Init" instantiate="true">
            <conditions>
                <event_cue_signalled cue="md.Setup.GameStart" />
                <check_value value="false" />

            </conditions>
            <actions>
                <create_list name="$Macros" />
                <append_to_list name="$Macros" exact="macro." />
                <do_all exact="$Macros.count" counter="$i">
                    <create_ship groupname="$Ships" macro="$Macros.{$i}" zone="player.zone">
                        <pilot macro="macro.character_boron_generic_01_macro">
                            <skills>
                                <skill type="boarding" exact="15" />
                                <skill type="engineering" exact="15" />
                                <skill type="management" exact="15" />
                                <skill type="morale" exact="15" />
                            </skills>
                        </pilot>
                        <loadout>
                            <!-- <level min="0" max="1" /> -->
                            <level exact="1" />
                            <variation exact="0.0" />
                        </loadout>
                        <owner exact="$Owner" overridenpc="true" />
                        <safepos object="player.ship" min="1km" max="10km" />
                    </create_ship>
                </do_all>
                <do_all exact="$Ships.count" counter="$i">
                    <debug_text text="'Macro: %1 Ship: %2 '.[$Ships.{$i}.macro, $Ships.{$i}.knownname]" />
                </do_all>
            </actions>
        </cue>
    </cues>
</mdscript>